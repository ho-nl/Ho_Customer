<?xml version="1.0"?>
<config>
    <tabs>
        <ho_config translate="label" module="ho_customer">
            <label>H&amp;O</label>
            <sort_order>0</sort_order>
        </ho_config>
    </tabs>
    <sections>
        <ho_customer translate="label" module="ho_customer">
            <label>Customer</label>
            <tab>ho_config</tab>
            <sort_order>500</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <automatic translate="label" module="ho_customer">
                    <label>Automatic Options</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <create_customers translate="label" module="ho_customer">
                            <label>Create Customers</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>10</sort_order>
                            <comment><![CDATA[Automatically creates customers from guest orders.]]></comment>
                        </create_customers>
                        <link_orders translate="label" module="ho_customer">
                            <label>Link Orders to Customers</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>20</sort_order>
                            <comment><![CDATA[Automatically link guest orders to existing accounts, based on email address.]]></comment>
                        </link_orders>
                    </fields>
                </automatic>
            </groups>
        </ho_customer>
    </sections>
</config>